<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBook"
            android:layout_width="100dp"
            android:layout_height="136dp"
            android:src="@drawable/ic_home_book_item_default_3" />

        <TextView
            android:id="@+id/tvBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivBook"
            android:layout_alignRight="@+id/ivBook"
            android:layout_alignTop="@+id/ivBook"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="5"
            android:text="文案"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBottom="@+id/ivBook"-->
        <!--android:layout_alignRight="@+id/ivBook"-->
        <!--android:layout_alignTop="@+id/ivBook"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:ellipsize="end"-->
        <!--android:ems="1"-->
        <!--android:maxLines="7"-->
        <!--android:text="文案"-->
        <!--android:textColor="@color/color_333333"-->
        <!--android:textSize="13sp" />-->

        <LinearLayout
            android:id="@+id/llSync"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/ivBook"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_main_home_book_item_download_1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="上传"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/ivSync"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_home_book_item_download_1" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="文案"
        android:textColor="@color/color_888888"
        android:textSize="12sp"
        android:visibility="visible" />
</LinearLayout>