    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/naviHY"
        android:layout_below="@id/headHY"
        android:layout_marginTop="0dp"
        android:background="#ffffff" >

        <ListView
            android:id="@+id/catalogListHY"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#f1f1f1"
            android:dividerHeight="1dp"
            android:fadeScrollbars="false"
            android:fastScrollEnabled="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="15dp"
            android:scrollbars="vertical" >
        </ListView>

        <ListView
            android:id="@+id/bookmarkListHY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#f1f1f1"
            android:dividerHeight="1dp" />

        <!--
             <com.haoyang.reader.page.ui.listviewslide.ListViewSlider
            android:id="@+id/bookmarkListHY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#f1f1f1"
            android:dividerHeight="1dp" />
        -->

        <com.haoyang.reader.page.ui.swipyrefreshlayout.SwipyRefreshLayout
            android:id="@+id/swipyrefreshHY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/noteListHY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#f1f1f1"
                android:dividerHeight="1dp"
                android:fastScrollEnabled="true"
                android:focusable="true" >
            </ListView>
        </com.haoyang.reader.page.ui.swipyrefreshlayout.SwipyRefreshLayout>

        <RelativeLayout
            android:id="@+id/noContentHY"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/noContentICONHY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/no_content_icon" />

            <TextView
                android:id="@+id/noContentTextHY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noContentICONHY"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#757575"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/noContentTextSubHY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noContentTextHY"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="#757575"
                android:textSize="14sp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>