<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<com.haoyang.reader.ui.HackyDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff00ff" >

    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.haoyang.reader.ui.NavigationDrawerFragment"
        android:layout_width="320dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        tools:layout="@layout/hy_navigation" />

</com.haoyang.reader.ui.HackyDrawerLayout>