<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/ic_main_category_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_main_category_item_level"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCategoryL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="文案文案"
                android:textColor="@color/color_242424"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvCategoryL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="文案文案"
                android:textColor="@drawable/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCategoryL3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="文案文案"
                android:textColor="@drawable/black"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivModify"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_main_category_item_modify" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_main_category_item_delete" />
    </LinearLayout>
</LinearLayout>