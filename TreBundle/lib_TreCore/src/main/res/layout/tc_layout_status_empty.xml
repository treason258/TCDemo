<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vgNoNetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tc_white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tc_empty" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tc_margin_large_30"
        android:gravity="center"
        android:text="网络不给力，请重新加载"
        android:textColor="@color/tc_text_black"
        android:textSize="@dimen/tc_text_size_big" />

    <TextView
        android:id="@+id/tv_button"
        android:layout_width="@dimen/tc_margin_large_100"
        android:layout_height="@dimen/tc_margin_large_30"
        android:layout_marginTop="@dimen/tc_margin_large_30"
        android:background="@drawable/tc_selector_rect_solid_theme_to_theme_alpha_corners"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/tc_white"
        android:textSize="@dimen/tc_text_size_normal" />

</LinearLayout>